{
    "compilerOptions": {
      "target": "ESNext",                          
      "lib": ["DOM", "DOM.Iterable", "ESNext"],    
      "module": "ESNext",                         
      "moduleResolution": "Node",                 
      "strict": true,                             
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true,   
      "isolatedModules": true,                    
      "noEmit": true,                             
      "jsx": "react-jsx"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }